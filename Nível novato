#include <stdio.h>
#include <stdlib.h>

// Definição da struct Peca
typedef struct Peca {
    char nome;
    int id;
    struct Peca* proximo;
} Peca;

// Definição da struct Fila
typedef struct {
    Peca* inicio;
    Peca* fim;
    int tamanho;
} Fila;

// Função para criar uma nova peça
Peca* gerarPeca(int id) {
    Peca* novaPeca = (Peca*) malloc(sizeof(Peca));
    char nomes[] = {'I', 'O', 'T', 'L'};
    novaPeca->nome = nomes[id % 4];
    novaPeca->id = id;
    novaPeca->proximo = NULL;
    return novaPeca;
}

// Função para inicializar a fila
void inicializarFila(Fila* fila) {
    fila->inicio = NULL;
    fila->fim = NULL;
    fila->tamanho = 0;
}

// Função para adicionar uma peça ao final da fila
void enqueue(Fila* fila, Peca* peca) {
    if (fila->tamanho == 0) {
        fila->inicio = peca;
        fila->fim = peca;
    } else {
        fila->fim->proximo = peca;
        fila->fim = peca;
    }
    fila->tamanho++;
}

// Função para remover a peça da frente da fila
Peca* dequeue(Fila* fila) {
    if (fila->tamanho == 0) {
        return NULL;
    }
    Peca* peca = fila->inicio;
    fila->inicio = fila->inicio->proximo;
    if (fila->inicio == NULL) {
        fila->fim = NULL;
    }
    fila->tamanho--;
    return peca;
}

// Função para exibir a fila
void exibirFila(Fila* fila) {
    Peca* atual = fila->inicio;
    printf("Fila de peças: ");
    while (atual != NULL) {
        printf("[%c %d] ", atual->nome, atual->id);
        atual = atual->proximo;
    }
    printf("\n");
}

int main() {
    Fila fila;
    inicializarFila(&fila);

    // Inicializar a fila com 5 peças
    for (int i = 0; i < 5; i++) {
        Peca* peca = gerarPeca(i);
        enqueue(&fila, peca);
    }

    int opcao;
    do {
        exibirFila(&fila);
        printf("Opções de ação:\n");
        printf("1 - Jogar peça (dequeue)\n");
        printf("2 - Inserir nova peça (enqueue)\n");
        printf("0 - Sair\n");
        printf("Escolha uma opção: ");
        scanf("%d", &opcao);

        switch (opcao) {
            case 1:
                if (fila.tamanho > 0) {
                    Peca* peca = dequeue(&fila);
                    printf("Peça jogada: [%c %d]\n", peca->nome, peca->id);
                    free(peca);
                } else {
                    printf("Fila vazia!\n");
                }
                break;
            case 2:
                if (fila.tamanho < 10) {
                    Peca* peca = gerarPeca(fila.tamanho);
                    enqueue(&fila, peca);
                } else {
                    printf("Fila cheia!\n");
                }
                break;
            case 0:
                printf("Saindo...\n");
                break;
            default:
                printf("Opção inválida!\n");
        }
    } while (opcao != 0);

    return 0;
}

